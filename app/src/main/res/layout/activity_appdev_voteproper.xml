<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#407C76"
        android:fillViewport="true"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".appdev_voteproper">

        <include
            android:id="@+id/include"
            layout="@layout/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginVertical="120dp">

        </include>

        <TextView
            android:id="@+id/text_vote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="104dp"
            android:gravity="center"
            android:text="FEBRUARY ENTRIES"
            android:textColor="#407C76"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>

        <TextView
            android:id="@+id/textv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Click the arrow buttons to view entries."
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_vote">

        </TextView>

        <ImageSwitcher
            android:id="@+id/entries"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="272dp"
            android:inAnimation="@android:anim/slide_in_left"
            android:outAnimation="@android:anim/slide_out_right"
            android:src="@drawable/entry2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/text_vote"
            app:layout_constraintHorizontal_bias="0.512"
            app:layout_constraintStart_toStartOf="@+id/text_vote"
            app:layout_constraintTop_toBottomOf="@+id/text_vote"
            app:layout_constraintVertical_bias="0.075" />

        <ImageButton
            android:id="@+id/before"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/btn_transparent"
            android:src="@drawable/ic_baseline_navigate_before_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/entries"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.244"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/next"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/btn_transparent"
            android:src="@drawable/ic_baseline_navigate_next_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/entries"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.244"
            tools:ignore="SpeakableTextPresentCheck">

        </ImageButton>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:text="VOTE ENTRIES"
            android:textColor="#407C76"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/entries"
            app:layout_constraintVertical_bias="0.131"></TextView>

        <TextView
            android:id="@+id/textv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Click the button to view."
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4"/>


        <TextView
            android:id="@+id/title"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="TITLE   @username"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@id/textView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/entries"
            app:layout_constraintTop_toBottomOf="@+id/entries"
            app:layout_constraintVertical_bias="0.0"></TextView>

        <ImageView
            android:id="@+id/vote1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/entry4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.259"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintVertical_bias="0.035" />

        <TextView
            android:id="@+id/counter_vote1"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginStart="90dp"
            app:layout_constraintBottom_toTopOf="@+id/vote1_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Image 1"
            android:textSize="15sp"
            android:gravity="center"></TextView>

        <Button
            android:id="@+id/vote1_btn"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginTop="100dp"
            android:backgroundTint="#407C76"
            android:text="VOTE"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.64"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <ImageView
            android:id="@+id/vote2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/entry2"
            app:layout_constraintEnd_toEndOf="@+id/vote1"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/vote1"
            app:layout_constraintTop_toBottomOf="@+id/vote1"></ImageView>

        <Button
            android:id="@+id/vote2_btn"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginTop="70dp"
            android:backgroundTint="#407C76"
            android:text="VOTE"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.64"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vote1_btn" />

        <TextView
            android:id="@+id/counter_vote2"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginStart="90dp"
            app:layout_constraintBottom_toTopOf="@+id/vote2_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Image 2"
            android:textSize="15sp"
            android:gravity="center"></TextView>

        <ImageView
            android:id="@+id/vote3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/entry3"
            app:layout_constraintEnd_toEndOf="@+id/vote2"
            app:layout_constraintStart_toStartOf="@+id/vote2"
            app:layout_constraintTop_toBottomOf="@+id/vote2" />

        <Button
            android:id="@+id/vote3_btn"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginTop="70dp"
            android:backgroundTint="#407C76"
            android:text="VOTE"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.64"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vote2_btn" />

        <TextView
            android:id="@+id/counter_vote3"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginStart="90dp"
            app:layout_constraintBottom_toTopOf="@+id/vote3_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Image 3"
            android:textSize="15sp"
            android:gravity="center"></TextView>

        <ImageView
            android:id="@+id/vote4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="100dp"
            android:src="@drawable/entry5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/vote3"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/vote3"
            app:layout_constraintTop_toBottomOf="@+id/vote3" />

        <Button
            android:id="@+id/vote4_btn"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginTop="70dp"
            android:backgroundTint="#407C76"
            android:text="VOTE"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.64"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vote3_btn" />

        <TextView
            android:id="@+id/counter_vote4"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginStart="90dp"
            app:layout_constraintBottom_toTopOf="@+id/vote4_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Image 4"
            android:textSize="15sp"
            android:gravity="center"></TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>